<iscontent type="text/html" charset="UTF-8" compact="true"/>
<iscache type="relative" minute="30" varyby="price_promotion"/>

<isinclude template="util/modules"/>

<div class="product-listing category-slot">
	<h2><isprint value="${slotcontent.calloutMsg}"/></h2>
	<ul class="search-result-items tiles-container">
		<isloop items="${slotcontent.content}" var="product" begin="0" end="2">
			<isobject object="${product}" view="recommendation">
				<li class="grid-tile"><isproducttile product="${product}" showpricing="${true}" /></li>
			</isobject>
		</isloop>
	</ul>
</div>
